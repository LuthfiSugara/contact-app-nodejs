<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Ubah Data Contact</h2>

            <% if (typeof errors != 'undefined') { %>
                <div class="alert alert-danger fw-bold" role="alert">
                    <ul>
                        <% errors.forEach(error => { %>
                            <li><%= error.msg %> </li>
                        <% }) %>
                    </ul>
                </div>  
            <% } %>

            <form method="post" action="/contact/update">
                <input type="hidden" value="<%= (contact.oldNama) ? contact.oldNama : contact.nama %>" name="oldNama">
                <div class="form-group">
                  <label for="nama">nama</label>
                  <input type="text" class="form-control" id="nama" name="nama" value="<%= contact.nama %>" required>
                </div>
                <div class="form-group">
                    <label for="phone">Nomor Handphone</label>
                    <input type="text" class="form-control" id="phone" name="phone" value="<%= contact.phone %>" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%= contact.email %>" required>
                </div>
                <button type="submit" class="btn btn-primary">Ubah Data Contact</button>
              </form>
        </div>
    </div>
</div>